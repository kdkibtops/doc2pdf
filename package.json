{
	"name": "doc-to-pdf-converter",
	"version": "1.0.2",
	"description": "Converts all .doc & .docx files in a specified folder and its subdirectories to pdf",
	"main": "build/index.js",
	"types": "Types/types.d.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/kdkibtops/doc2pdf.git"
	},
	"scripts": {
		"build": "npx tsc",
		"test": "npm run build && mocha 'build/tests/**/*.test.js' --timeout 10000",
		"start": "tsc-watch -p ./tsconfig.json --onSuccess \"node ./build/index.js\"",
		"pack": "npx tsc && pkg package.json"
	},
	"keywords": [
		"pdf",
		"doc",
		"docx",
		"convert",
		"coverter",
		"microsoft",
		"word"
	],
	"author": "Mustafa Heidar",
	"license": "ISC",
	"dependencies": {
		"idna-uts46-hx": "^3.2.0",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@types/yargs": "^17.0.33",
		"tsc-watch": "^6.2.1",
		"typescript": "^5.7.2"
	},
	"bin": "build/index.js",
	"files": [
		"build/**/*",
		"Types/types.d.ts",
		"README.md"
	],
	"pkg": {
		"targets": [
			"node14-win-x64",
			"node14-macos-x64"
		],
		"outputPath": "./",
		"assets": [
			"assets/script.vbs"
		],
		"scripts": "build/**/*.js",
		"files": [
			"dist",
			"assets/script.vbs",
			"README.md"
		]
	}
}
